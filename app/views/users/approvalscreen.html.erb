<script>
    $(document).ready(function () {
        $('select').material_select();
    });

    $(document).ready(function () {
        $('.collapsible').collapsible();
    });
</script>
<div class="container">
  <div class="row">
    <div class="col m8 offset-m3">
      <h5 class="black-text">Approve Users</h5>
      <% if @user %>
          <% @user.each do |user| %>
              <%= form_for(user) do |f| %>
                  <span> Tier2/Admin approving account:</span>
                  <%= f.select :tier2_approval, ['impending', 'allow', 'deny'] %>
                  <div class="btn waves-effect waves-light" type="submit" name="action">
                    <%= f.submit 'Update info' %>
                  </div>
              <% end %>
          <% end %>
      <% end %>

      <% if @account %>
          <% @account.each do |account| %>
              <%= form_for(account) do |f| %>
                  <span> Tier2/Admin approving account:</span>
                  <%= f.select :tier2_approval, ['impending', 'allow', 'deny'] %>
                  <div class="btn waves-effect waves-light" type="submit" name="action">
                    <%= f.submit 'Update info' %>
                  </div>
              <% end %>
          <% end %>
      <% end %>
    </div>
  </div>
</div>