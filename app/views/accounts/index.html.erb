<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Acctype</th>
      <th>Accnumber</th>
      <th>Accrouting</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.acctype %></td>
        <td><%= account.accnumber %></td>
        <td><%= account.accrouting %></td>
        <td><%= account.user_id %></td>
        <td><%= link_to 'Show', user_account_url(@user, account) %></td>
        <td><%= link_to 'Edit', edit_user_account_path(@user, account) %></td>
        <td><%= link_to 'Destroy', user_account_url(@user, account), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_user_account_path(@user) %>
