<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col m12 offset-m0">

      <table>
        <tbody>
        <tr>
          <td>
            <button class="waves-effect waves-light btn"> <%= link_to 'Back to Accounts', user_accounts_path(@account.user_id) %> </button>
          </td>
          <td>
            <%= link_to "Download PDF", { :action => "show", :format => :pdf }, class: 'waves-effect waves-light btn', target: '_blank'%>
          </td>
          <td>
            <button class="waves-effect waves-light btn"> <%= link_to 'New Transaction', new_account_tran_path(@account) %> </button>
          </td>
        </tr>
        <tr>
          <td>
            <strong>Acctype:</strong>
            <%= @account.acctype %>
          </td>
          <td>
            <strong>Accnumber:</strong>
            <%= @account.accnumber %>
          </td>
          <td>
            <strong>Accrouting:</strong>
            <%= @account.accrouting %>
          </td>
          <td>
            <strong>User:</strong>
            <%= @account.user_id %>
          </td>
          <td>
            <strong>Balance:</strong>
            <%= @account.statement_balance %>
          </td>
        </tr>

        </tbody>
      </table>


      <table class="highlight">
        <thead>
        <tr>
          <th>Amount</th>
          <th>Transaction Type</th>
          <th>Balance</th>
        </tr>
        </thead>

        <tbody>
        <% @trans.each do |tran| %>
            <tr>
              <td><%= tran.amount %></td>
              <td><%= tran.credit %></td>
              <td><%= tran.balance %></td>
              <!--<#% if not current_user.customer? %>-->
              <!--<td><#%= #link_to 'Destroy', account_tran_path(@account, tran), method: :delete, data: {confirm: 'Are you sure?'}%></td>-->
            <!--<#%end%>-->
            </tr>
            <% end %>
        </tbody>

      </table>

    </div>
  </div>
</div>

